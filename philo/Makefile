NAME = philo

CC = cc

CFLAGS = -Wall -Werror -Wextra -g -fsanitize=thread
SRCS = $(wildcard *.c)
# $(shell find . -name "*.c" | cut -d "/" -f2)

OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all